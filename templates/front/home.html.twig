{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}
    {% for message in app.flashes("success") %}

        <div class="alert alert-success col-md-6 mx-auto">{{ message }}</div>

    {% endfor %}
    {% for message in app.flashes("danger") %}

        <div class="alert alert-danger col-md-6 mx-auto">{{ message }}</div>

    {% endfor %}
    <div class="row justify-content-start">
        {% for article in articles %}
            <div class="col-md-3 mb-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.nom }}</h5>
                        <div class="border border-dark"></div>
                    </div>
                    <img src="{{ asset('upload/') }}{{ article.photo }}" alt="">
                    <div class="card-body">
                        <div class="btn-group-vertical">
                            <button type="button" class="btn btn-primary">
                                <a href="#" class="card-link text-light text-decoration-none fs-6">Ajouter au panier</a>
                            </button>
                        </div>
                    </div>
                    <div class="card-footer text-dark fw-bold">
                        {{ article.prix }} â‚¬
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

