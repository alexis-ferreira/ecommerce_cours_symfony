{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    {% for message in app.flashes("success") %}

        <div class="alert alert-success col-md-6 mx-auto text-center">{{ message }}</div>

    {% endfor %}
    {% for message in app.flashes("error") %}

        <div class="alert alert-danger col-md-6 mx-auto text-center">{{ message }}</div>

    {% endfor %}

    <form method="post" action="{{ path('forgotPassword') }}" class="col-md-4 mx-auto">
        <div class="form-group text-center">
            <label class="form-label mt-4">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Saisissez votre email">
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </div>
    </form>

{% endblock %}


