{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    {% for message in app.flashes("success") %}

        <div class="alert alert-success col-md-6 mx-auto text-center">{{ message }}</div>

    {% endfor %}
    {% for message in app.flashes("error") %}

        <div class="alert alert-danger col-md-6 mx-auto text-center">{{ message }}</div>

    {% endfor %}

    <form method="post" action="{{ path('login') }}" class="col-md-4 mx-auto">
        <div class="form-group text-center">
            <label class="form-label mt-4">Email</label>
            <input type="email" class="form-control" name="_username" placeholder="Saisissez votre email">
        </div>
        <div class="form-group mb-4 text-center">
            <label class="form-label mt-4">Mot de passe</label>
            <input type="password" class="form-control" name="_password" placeholder="Saisissez votre mot de passe">
        </div>
        <div class="mb-4 text-dark">
            <a href="{{ path('forgotPassword') }}">Mot de passe oubli√© ?</a>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Valider</button>
        </div>
    </form>

{% endblock %}